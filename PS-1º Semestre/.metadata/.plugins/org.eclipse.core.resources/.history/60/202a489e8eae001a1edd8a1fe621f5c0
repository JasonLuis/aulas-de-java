CREATE OR REPLACE TRIGGER update_segbot
BOFORE UPDATE
   ON TB_BOT
BEGIN
	UPDATE TB_SEGMENT SET ID_BOT = NULL WHERE ID_BOT = old.ID_BOT;
END;

CREATE OR REPLACE TRIGGER delete_segbot
BOFORE DELETE
   ON TB_BOT
BEGIN
	UPDATE TB_SEGMENT SET ID_BOT = NULL WHERE ID_BOT = old.ID_BOT;
END;

CREATE OR REPLACE TRIGGER update_segbot
AFTER UPDATE
ON empregados
REFERENCING NEW AS NEW OLD AS OLD
FOR EACH ROW
BEGIN
INSERT INTO log_salario
(codigo, salario_anterior, salario_atual,
data_alteracao, usuario )
VALUES (:NEW.codigo, :OLD.salario_anterior,
:NEW.salario_atual, SYSDATE, USER);
END;
